<p id="notice"><%= notice %></p>

<h1>Excuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Meeting ID</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @excuses.each do |excuse| %>
      <tr>
        <td><%= excuse.attendance_record.committee_enrollment.user.name %></td>
        <td><%= excuse.attendance_record.meeting.id %></td>
        <td><%= excuse.attendance_record.meeting.start_time %></td>
        <td><%= link_to 'Edit', edit_excuse_path(excuse) %></td>
        <td><%= link_to 'Delete', excuse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

