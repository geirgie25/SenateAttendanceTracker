<div style="text-align:center">
  <h3>Committee: <%= @absence.meeting.committee.committee_name %></h3>
  <h4 style="padding-bottom: 10px">Meeting: <%= @absence.meeting.title %></h4>
</div>

<div class="row">
  <div class="col-sm-3">
  </div>
  <div class="col-xs-6">
    <div class="panel-custom panel-default">
      <div class="panel-heading"><h2>Create Excuse</h2></div>
      <%= form_with(model: @excuse) do |form| %>
      <div class="panel-body">
        <div style="text-align:center">
          <%= form.hidden_field :attendance_record_id, :value => @absence.id %>
          <%= form.label :reason %>
          <br>
          <%= form.text_area :reason, style: 'width: 300px; height: 200px' %>
        </div>
      </div>
      <div class="panel-footer">
        <div style="text-align:center">
          <%= form.submit %>
        </div>
      </div>
      <%end%>
    </div>
  </div>
</div>

