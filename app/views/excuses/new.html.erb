<h1>Excuse for <%= @absence.meeting.title %> meeting</h1>

<%= form_with(model: @excuse) do |form| %>
  <% if @excuse.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@excuse.errors.count, "error") %> prohibited this excuse from being saved:</h2>

      <ul>
        <% @excuse.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :attendance_record_id, :value => @absence.id %>

  <div class="field">
    <%= form.label :reason %>
  </div>

  <div class="field">
    <%= form.text_area :reason %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

<%= link_to 'Back', '/excuses/my_excuses' %>
