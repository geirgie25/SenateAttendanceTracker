<%= render "shared/top_banner" %>
<% # this file is shown to the administrator that is logged in  %>
<% if @show_start_meeting %>
    <%= form_with url: "/dashboard/admin/start_meeting", method: :post do |form|%>
        <%= form.submit "Start Meeting Sign-In" %>
    <% end %>
<% end %>
<% if !@show_start_meeting %>
    <%= form_with url: "/dashboard/admin/end_meeting", method: :post do |form|%>
        <%= form.submit "End Meeting Sign-In" %>
    <% end %>
<% end %>
<h2> Meeting Details</h2>

<table>
  <thead>
    <tr>
      <th>Meeting ID: </th>
      <th>Start Time: </th>
      <th>End Time: </th>
      <th>Meeting Link: </th>
    </tr>
  </thead>
  <tbody>
    <% @meetings.each do |meeting| %>
    <tr>
        <td> <%= meeting.id %></td>
        <td> <%= meeting.start_time %></td>
        <td> <%= meeting.end_time %></td>
        <td> <%= link_to "Show Meeting", "/dashboard/admin/" + meeting.id.to_s %> </td>
    </tr>
    <% end %>
  </tbody>
</table>


<div class="footer">
	<p>aggiesenate</p>
</div>
