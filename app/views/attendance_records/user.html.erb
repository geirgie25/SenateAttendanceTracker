<h2> Attendance Summary </h2>
<table>
  <thead>
    <% if show_yellow_warning?(6, @total_absences) %>
      <span style="background-color: #FFFF00">You are nearing the total absence limit</span>
    <% elsif show_red_warning?(6, @total_absences) %>
      <span style="background-color: #FF0000">You have reached the total absence limit</span>
    <% end %>
    <tr>
      <th>User</th>
      <th>Number of Absences</th>
      <th>Excused Absences</th>
      <th>Unexcused Absences</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.name %></td>
      <td><%= @total_absences %></td>
      <td><%= @excused_absences %></td>
      <td><%= @unexcused_absences %></td>
    </tr>
  </tbody>
</table>

<h2> Committee Attendance Summary </h2>
<% @user.committee_enrollments.each do |ce| %>
  <h3><%= ce.committee.committee_name %> Committee</h3>
  <% if show_yellow_warning?(6, AttendanceRecord.find_total_absences(ce)) %>
    <span style="background-color: #FFFF00">You are nearing the absence limit for the <%= ce.committee.committee_name %> committee</span>
  <% elsif show_red_warning?(6, AttendanceRecord.find_total_absences(ce)) %>
    <span style="background-color: #FF0000">You have reached the absence limit for the <%= ce.committee.committee_name %> committee</span>
  <% end %>
  <table>
    <thead>
      <tr>
        <th>Number of Absences</th>
        <th>Excused Absences</th>
        <th>Unexcused Absences</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @total_absences %></td>
        <td><%= @excused_absences %></td>
        <td><%= @unexcused_absences %></td>
      </tr>
    </tbody>
  </table>
  <br>
<% end %>
<%= link_to "Excuses", "/excuses/my_excuses"%>|
<td> <%= link_to "See User Attendance Record", attendance_records_path %> </td>
