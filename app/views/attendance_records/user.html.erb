<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Number of Absences</th>
      <th>Excused Absences</th>
      <th>Unexcused Absences</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.name %></td>
      <td><%= @total_absences %></td>
      <td><%= @excused_absences %></td>
      <td><%= @unexcused_absences %></td>
    </tr>
  </tbody>
</table>

<% if @user.roles.any? {|role| role.role_name.include?("General")} %>
  <%= link_to "Excuses", "/excuses/" %>
<% else%>
  <%= link_to "Excuses", "/excuses/my_excuses"%>
<% end %>
