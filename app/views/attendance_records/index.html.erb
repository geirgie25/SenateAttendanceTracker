<table>
  <thead>
    <tr>
      <th>Committees</th>
      <th>Meeting</th>
      <th>Attendance Records</th>
      <th>Excuse Form</th>
    </tr>
  </thead>
  <tbody>
     <% @records.each do |record| %>
    <tr>
      <td><%= record.meeting.committee.committee_name %></td>
      <td><%= record.meeting.title %></td>
      <td><%= record.attended%></td>

     <% if show_excuse_link?(record) && current_user.id = record.committee_enrollment.user.id %>
        <td> <%= link_to "Add an Excuse",  "" %> </td>
     <%end%>

    </tr>
    <% end %>
  </tbody>
</table>
