<div class="center">
  <h2>Login</h2>
  <%= form_tag '/login' do %>
    <%= label_tag :username, nil, class: "login_label" %>
    <%= text_field_tag :username, nil, class: "login_field" %>
    <%= label_tag :password, nil, class: "login_label"  %>
    <%= password_field_tag :password, nil, class: "login_field"  %>
    <%= submit_tag "Login", id: "login_button" %>

  <%end%>
</div>
