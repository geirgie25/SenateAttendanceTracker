<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>


<!-- Attended -->
<table>
  <thead>
    <tr>
      <th>Committee Name</th>
    </tr>
  </thead>

  <tbody>
    <% AttendanceRecord.where(committee_enrollment: @user.committee_enrollments).and(where(attended: true)).each do |absInst| %>
      <tr>
        <td><%= absInst.meeting.committee.committee_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<!-- Absent -->
<table>
  <thead>
    <tr>
      <th>Committee Name</th>
    </tr>
  </thead>

  <tbody>
    <% AttendanceRecord.where(committee_enrollment: @user.committee_enrollments).and(where(attended: false)).each do |absInst| %>
      <tr>
        <td><%= absInst.meeting.committee.committee_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
