<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @user.name %>
</p>

<% if current_user&.admin? %>
<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>
<% end %>


<!-- Attended -->
<table class="table">
  <thead>
    <tr>
      <th scope="col">Committee Name</th>
      <th scope="col">Meeting Title</th>
      <th scope="col">Attendance</th>
    </tr>
  </thead>

  <tbody>
    <% AttendanceRecord.where(committee_enrollment: @user.committee_enrollments).each do |absInst| %>
      <tr>
        <td><%= absInst.meeting.committee.committee_name %></td>
        <td><%= absInst.meeting.title %></td>
        <td><%= absInst.attended %></td>
      </tr>
    <% end %>
  </tbody>
</table>
