<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <% if current_user&.admin? %>
        <th>Username</th>
      <% end %>
      <th>Number of Absences</th>
      <th>Excused Absences</th>
      <th>Unexcused Absences</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <% if current_user&.admin? %>
          <td><%= user.username %></td>
        <% end %>
        <td><%= AttendanceRecord.find_total_absences(user) %></td>
        <td><%=  AttendanceRecord.find_total_excused_absences(user) %></td>
        <td><%= AttendanceRecord.find_total_absences(user) -  AttendanceRecord.find_total_excused_absences(user) %></td>
        <td><%= link_to 'Show', user %></td>
        <% if current_user&.admin? %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user&.admin? %>
  <%= link_to 'New User', new_user_path %>
<% end %>
